                android:hint="Enter DL No." />

            <EditText
                android:id="@+id/dlno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL No." />

            <EditText
                android:id="@+id/dlno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL No." />

            <EditText
                android:id="@+id/dlno"
                android:layout_width="match_parent"
