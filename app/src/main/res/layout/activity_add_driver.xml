                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL Name" />

            <EditText
                android:id="@+id/edtdlmobno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL Contact No." />

            <EditText
                android:id="@+id/edtaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL Address"/>

            <EditText
                android:id="@+id/edtdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DL" />

            <EditText
                android:id="@+id/dlno"
